pipeline{
    agent any
    stages{
        stage("compile"){
            steps{
                sh "javac StringJoiner.java"
            }

        }
        stage("run"){
            steps{
                sh "java StringJoiner"
            }

        }
    }

    post{
        always{
            echo "always"

        }
        success{
            echo "success"

        }
        // failure{
        //     echo "failure"
        // }
    }
}